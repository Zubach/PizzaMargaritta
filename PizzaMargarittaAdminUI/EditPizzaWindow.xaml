<Window x:Class="PizzaMargarittaAdminUI.EditPizzaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaMargarittaAdminUI"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="EditPizzaWindow" Height="341.083" Width="639.491">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBox
                Margin="10,10,10,0"
  x:Name="NameTextBox"
  materialDesign:HintAssist.Hint="Name">
                
            </TextBox>

            <TextBox
                Margin="10,10,10,0"
                Name="PriceTextBox"
  materialDesign:HintAssist.Hint="Price"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

            <TextBox
                Name="DescriptionTextBox"
    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
    Margin="5,10,10,0"
    VerticalAlignment="Top"
    Height="100"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    materialDesign:HintAssist.Hint="Description"
     />


            <DockPanel Margin="0,50,0,0" LastChildFill="False">
                <Button
                    Click="Button_Click"
                    Margin="10,0,0,0"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            Width="100"
            >
                    ACCEPT
                </Button>

                <Button Margin="30,0,0,0"
                        Click="Button_Click_1"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            Width="100"
            >
                    CANCEL
                </Button>
            </DockPanel>
        </StackPanel>

        <Image
            
            Margin="20"
            Grid.Column="1"
            Name="Image">
            
        </Image>

        

    </Grid>
</Window>
